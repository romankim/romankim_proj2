<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>

    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content, size: "60x12" %>
    </p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
